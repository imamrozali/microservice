# Main Database (employees, users, attendance data)
DB_MAIN_HOST=localhost
DB_MAIN_PORT=5433
DB_MAIN_USER=dexa
DB_MAIN_PASSWORD=password
DB_MAIN_NAME=employee_management

# Logs Database (audit logs, system logs)
DB_LOGS_HOST=localhost
DB_LOGS_PORT=5434
DB_LOGS_USER=dexa
DB_LOGS_PASSWORD=password
DB_LOGS_NAME=employee_logs

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=password
RABBITMQ_VHOST=/
RABBITMQ_MANAGEMENT_PORT=15672

# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=password

# Audit Stream Configuration  
AUDIT_QUEUE_NAME=audit-logs
AUDIT_EXCHANGE_NAME=audit-exchange
AUDIT_ROUTING_KEY=audit.log

# Services Configuration
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
ATTENDANCE_SERVICE_PORT=3003
NOTIFICATION_SERVICE_PORT=3004

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
ATTENDANCE_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key

# Application Environment
NODE_ENV=development

# Timezone Configuration
TZ=Asia/Jakarta
