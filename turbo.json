{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "DB_MAIN_HOST",
    "DB_MAIN_PORT",
    "DB_MAIN_NAME",
    "DB_MAIN_USER",
    "DB_MAIN_PASSWORD",
    "DB_MAIN_SSL"
  ],
  "ui":"tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "migrate": {
      "dependsOn": ["^migrate"],
      "cache": false
    },
    "seed": {
      "cache": false
    },
    "test": {},
    "test:e2e": {}
  }
}
