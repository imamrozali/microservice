{
  "name": "@repo/database",
  "version": "1.0.0",
  "description": "Reusable Kysely database package for employee management system",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "db:migrate": "tsx src/migrate.ts",
    "db:seed": "tsx src/seed.ts",
    "db:create": "tsx src/create-database.ts"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "dotenv": "^16.3.1",
    "kysely": "^0.27.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@nestjs/common": "11.1.9",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.10.7",
    "kysely-codegen": "^0.19.0",
    "tsx": "^4.0.0",
    "typescript": "^5.2.2"
  },
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./nestjs": {
      "import": "./dist/src/nestjs-module.js",
      "require": "./dist/src/nestjs-module.js",
      "types": "./dist/src/nestjs-module.d.ts"
    }
  }
}
